{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "uvicorn backend.main:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  },
  "variables": {
    "DISCORD_TOKEN": {
      "description": "Discord Bot Token from Discord Developer Portal",
      "value": ""
    },
    "DISCORD_GUILD_ID": {
      "description": "Discord Guild (Server) ID",
      "value": ""
    },
    "ARCHITECT_ID": {
      "description": "Discord User ID of Architect (for admin commands)",
      "value": ""
    },
    "REDIS_URL": {
      "description": "Redis connection URL (provided by Railway)",
      "value": "redis://localhost:6379"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL connection URL (provided by Railway)",
      "value": ""
    },
    "NOTION_API_KEY": {
      "description": "Notion API Key for context sharing",
      "value": ""
    },
    "NOTION_DATABASE_ID": {
      "description": "Notion Database ID for context storage",
      "value": ""
    },
    "LOG_LEVEL": {
      "description": "Logging level (INFO, DEBUG, WARNING, ERROR)",
      "value": "INFO"
    },
    "DEBUG": {
      "description": "Enable debug mode",
      "value": "false"
    }
  }
}

