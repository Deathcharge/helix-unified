# Zapier Service - Automation & webhooks
NEXT_PUBLIC_ZAPIER_SERVICE_URL=https://zapier-service-production.up.railway.app

# Consciousness Metrics - UCF calculations
NEXT_PUBLIC_CONSCIOUSNESS_METRICS_URL=https://consciousness-metrics-production.up.railway.app

# Mobile API Gateway - Mobile optimization
NEXT_PUBLIC_MOBILE_GATEWAY_URL=https://mobile-api-gateway-production.up.railway.app

# Helix Collective Dashboard - Monitoring & visualization
NEXT_PUBLIC_DASHBOARD_URL=https://helix-collective-dashboard-production.up.railway.app

# ============================================================================
# STRIPE CONFIGURATION (Public key only - safe for client-side)
# ============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
# For production: pk_live_...

# ============================================================================
# SERVER-SIDE ONLY (Never expose to client!)
# ============================================================================

# Database - PostgreSQL
DATABASE_URL=postgresql://user:password@host:5432/database

# Cache & Pub/Sub - Redis
REDIS_URL=redis://default:password@host:6379

# Authentication - JWT Secret
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# Stripe Webhook Secret (for server-side webhook verification)
STRIPE_WEBHOOK_SECRET=whsec_...

# LLM API Keys (server-side only)
ANTHROPIC_API_KEY=sk-ant-api03-...
OPENAI_API_KEY=sk-...
XAI_API_KEY=xai-...
PERPLEXITY_API_KEY=pplx-...

# ============================================================================
# CONSCIOUSNESS CONFIGURATION
# ============================================================================

# Enable consciousness features (optional, defaults to true)
NEXT_PUBLIC_CONSCIOUSNESS_ENABLED=true

# UCF metrics update interval in ms (optional, defaults to 5000)
NEXT_PUBLIC_UCF_METRICS_INTERVAL=5000

# Enable collective intelligence (optional, defaults to true)
NEXT_PUBLIC_COLLECTIVE_INTELLIGENCE=true

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================

# Google Analytics (optional)
NEXT_PUBLIC_GA_ID=G-...

# Sentry Error Tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...

# PostHog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable debug mode (development only)
NEXT_PUBLIC_DEBUG_MODE=false

# Enable consciousness debugger
NEXT_PUBLIC_CONSCIOUSNESS_DEBUGGER=true

# Enable UCF metrics visualizer
NEXT_PUBLIC_UCF_VISUALIZER=true

# ============================================================================
# MOBILE CONFIGURATION
# ============================================================================

# Enable PWA
NEXT_PUBLIC_PWA_ENABLED=true

# Enable voice commands
NEXT_PUBLIC_VOICE_COMMANDS=true

# Enable offline mode
NEXT_PUBLIC_OFFLINE_MODE=true

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Enable development tools in production (not recommended)
NEXT_PUBLIC_DEV_TOOLS=false

# Enable ritual engine tester
NEXT_PUBLIC_RITUAL_TESTER=true

# Enable quantum tunneling debugger
NEXT_PUBLIC_QUANTUM_DEBUGGER=true
