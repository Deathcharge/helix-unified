# Helix Backend Environment Variables
# Copy to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/helix

# JWT Secret
JWT_SECRET=change-this-to-random-secret-in-production

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe (optional)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Monthly pricing (includes 14-day free trial)
STRIPE_PRICE_HOBBY=price_...                # $10/mo Hobby tier
STRIPE_PRICE_STARTER=price_...              # $29/mo Starter tier
STRIPE_PRICE_PRO=price_...                  # $79/mo Pro tier
STRIPE_PRICE_ENTERPRISE=price_...           # $299/mo Enterprise tier

# Annual pricing (25% discount = 9 months pricing)
STRIPE_PRICE_HOBBY_ANNUAL=price_...         # $90/yr ($7.50/mo) - Save $30/yr
STRIPE_PRICE_STARTER_ANNUAL=price_...       # $261/yr ($21.75/mo) - Save $87/yr
STRIPE_PRICE_PRO_ANNUAL=price_...           # $711/yr ($59.25/mo) - Save $237/yr
STRIPE_PRICE_ENTERPRISE_ANNUAL=price_...    # $2,691/yr ($224.25/mo) - Save $897/yr

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Discord Alerts (optional - for emergency notifications)
DISCORD_ALERT_WEBHOOK=https://discord.com/api/webhooks/...

# Railway (auto-provided)
# PORT=8000

# ============================================================================
# ADMIN ACCESS SYSTEM (v17.1)
# ============================================================================

# Admin emails (comma-separated, NO SPACES around commas)
# Users with these emails get unlimited access to all features
ADMIN_EMAILS=admin@helixspiral.work,owner@example.com

# Admin user IDs (optional, comma-separated)
ADMIN_USER_IDS=

# Master admin key for emergency access (generate with: openssl rand -base64 32)
MASTER_ADMIN_KEY=your-super-secret-master-key-here

# ============================================================================
# MULTIMEDIA SUITE
# ============================================================================

# Storage provider: "local", "s3", "gcs", "azure"
MULTIMEDIA_STORAGE=local

# AWS S3 (if using S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=helix-multimedia
AWS_REGION=us-east-1

# Storage quotas (GB)
STORAGE_QUOTA_PERSONAL=10
STORAGE_QUOTA_BUSINESS=100
STORAGE_QUOTA_ENTERPRISE=1000

# ============================================================================
# EMAIL MARKETING (HELIX MAIL)
# ============================================================================

# Email provider: "sendgrid", "mailgun", "ses", "smtp"
EMAIL_PROVIDER=sendgrid

# SendGrid
SENDGRID_API_KEY=

# Mailgun
MAILGUN_API_KEY=
MAILGUN_DOMAIN=mg.yourdomain.com

# AWS SES
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@yourdomain.com

# SMTP (generic)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ============================================================================
# VIDEO HOSTING (HELIX STREAM)
# ============================================================================

# Video storage: "s3", "gcs", "azure", "local"
VIDEO_STORAGE=s3

# CDN for video delivery
VIDEO_CDN_URL=https://cdn.yourdomain.com

# Transcoding service: "aws-mediaconvert", "gcs-transcoder", "local-ffmpeg"
TRANSCODING_SERVICE=aws-mediaconvert

# AWS MediaConvert
AWS_MEDIACONVERT_ROLE=
AWS_MEDIACONVERT_QUEUE=

# ============================================================================
# CUSTOMER SUPPORT CHAT (HELIX CHAT)
# ============================================================================

# WebSocket URL for real-time chat
WEBSOCKET_URL=wss://api.helixspiral.work/ws

# Chat notifications
CHAT_NOTIFICATION_WEBHOOK=

# AI chatbot (optional)
CHAT_AI_ENABLED=true
CHAT_AI_MODEL=claude-3-5-sonnet-20241022

# ============================================================================
# UPTIME MONITORING (HELIX MONITOR)
# ============================================================================

# Default check interval (seconds)
MONITOR_DEFAULT_INTERVAL=60

# Alert channels
MONITOR_ALERT_EMAIL=true
MONITOR_ALERT_SLACK=true
MONITOR_ALERT_DISCORD=true

# Slack webhook
SLACK_WEBHOOK_URL=

# PagerDuty (optional)
PAGERDUTY_API_KEY=
PAGERDUTY_SERVICE_ID=

# ============================================================================
# ANALYTICS PLATFORM (HELIX ANALYTICS)
# ============================================================================

# Analytics database
ANALYTICS_DATABASE_URL=postgresql://user:pass@host:5432/analytics

# ClickHouse (optional, for time-series analytics)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Cache TTL (seconds)
ANALYTICS_CACHE_TTL=300

# ============================================================================
# CUSTOMER DATA PLATFORM (HELIX CDP)
# ============================================================================

# Event storage
CDP_EVENTS_DATABASE=postgresql://user:pass@host:5432/helix_cdp

# Redis for real-time data
CDP_REDIS_URL=redis://localhost:6379

# Segment integration (optional)
SEGMENT_WRITE_KEY=

# Data retention (days)
CDP_EVENT_RETENTION_DAYS=365

# ============================================================================
# APPOINTMENT BOOKING (HELIX SCHEDULE)
# ============================================================================

# Calendar integration: "google", "outlook", "ical"
CALENDAR_INTEGRATION=google

# Google Calendar API
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=

# Timezone
DEFAULT_TIMEZONE=America/New_York

# ============================================================================
# FORM BUILDER (HELIX FORMS)
# ============================================================================

# Form submissions storage
FORMS_STORAGE=postgresql

# Webhook for form submissions
FORMS_WEBHOOK_URL=

# Anti-spam (optional)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
