# Helix Collective v14.5 - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# DISCORD BOT CONFIGURATION
# ============================================================================
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here
ARCHITECT_ID=your_discord_user_id_here

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_BASE=http://localhost:8000
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost/helix_collective
REDIS_URL=redis://localhost:6379

# ============================================================================
# ZAPIER WEBHOOKS
# ============================================================================
# Create these webhooks in Zapier for real-time Notion logging
# See ZAPIER_SETUP.md for detailed instructions

ZAPIER_EVENT_HOOK_URL=https://hooks.zapier.com/hooks/catch/xxxxx/event
ZAPIER_AGENT_HOOK_URL=https://hooks.zapier.com/hooks/catch/xxxxx/agent
ZAPIER_SYSTEM_HOOK_URL=https://hooks.zapier.com/hooks/catch/xxxxx/system

# ============================================================================
# NOTION INTEGRATION
# ============================================================================
NOTION_API_KEY=your_notion_api_key_here
NOTION_SYSTEM_STATE_DB=009a946d04fb46aa83e4481be86f09ef
NOTION_AGENT_REGISTRY_DB=2f65aab794a64ec48bcc46bf760f128f
NOTION_EVENT_LOG_DB=acb01d4a955d4775aaeb2310d1da1102
NOTION_CONTEXT_DB=d704854868474666b4b774750f8b134a

# ============================================================================
# RAILWAY DEPLOYMENT
# ============================================================================
RAILWAY_ENVIRONMENT=production
RAILWAY_STATIC_URL=https://your-railway-app.up.railway.app

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=INFO
DEBUG=false

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================
SYSTEM_NAME=Helix Collective v14.5
SYSTEM_VERSION=14.5
SYSTEM_ENVIRONMENT=development

