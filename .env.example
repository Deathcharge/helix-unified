# Helix Collective v14.5 - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# DISCORD BOT CONFIGURATION
# ============================================================================
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here
ARCHITECT_ID=your_discord_user_id_here

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_BASE=http://localhost:8000
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost/helix_collective
REDIS_URL=redis://localhost:6379

# ============================================================================
# NOTION INTEGRATION
# ============================================================================
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# ============================================================================
# RAILWAY DEPLOYMENT
# ============================================================================
RAILWAY_ENVIRONMENT=production
RAILWAY_STATIC_URL=https://your-railway-app.up.railway.app

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=INFO
DEBUG=false

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================
SYSTEM_NAME=Helix Collective v14.5
SYSTEM_VERSION=14.5
SYSTEM_ENVIRONMENT=development

