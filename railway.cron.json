{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python services/notion_sync_daemon.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "cron": {
    "schedule": "*/5 * * * *",
    "command": "python services/notion_sync_daemon.py"
  }
}
